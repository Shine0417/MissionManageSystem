<%# param: controller: , model:  %>
<%= form_tag({controller: controller, action: "index"}, method: :get) do %>
  <%= label_tag :sort, t('sort_by') %>
  <%= select_tag :sort, options_for_select(translate(model.column_names, model), @sort_by) %>
  <%= check_box_tag :reverse, "DESC", (@sort_dir == 'DESC') %>
  <%= label_tag :reverse, t('reverse') %>
  <%= submit_tag t('submit'), name: nil %>
<% end %>
