<%= render "err", object: @mission %>
<%= form_for @mission do |f|%>
  <%= f.label :title, t('mission.title')%>
  <%= f.text_field :title, autofocus: true %>
  <%= f.label :description, t('mission.description')%>
  <%= f.text_field :description %>
  <%= f.label :due_date, t('mission.due_date') %>
  <%= f.datetime_local_field :due_date %>
  <%= f.label :priority, t('mission.priority') %>
  <%= f.select :priority, options_for_select(Mission.priorities.keys.map{|pr| [t("mission.priorities.#{pr}"), pr] }, @mission.priority) %>
  <%= f.submit t('submit'), name: nil %>
<% end %>
