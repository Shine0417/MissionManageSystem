<%# param: controller: , model:  %>
<%= form_tag({controller: controller, action: "index"}, method: :get) do %>
  <%= label_tag :sort, t('sort_by') %>
  <%= select_tag :sort, options_for_select(model.column_names, sort_param(params[:sort])) %>
  
  <%= check_box_tag :reverse, "1", !params[:reverse].nil? %>
  <%= label_tag :reverse, t('reverse') %>
  
  <%= submit_tag t('submit') %>
<% end %>
