<%= render "err", object: @mission %>

<%= form_for @mission do |f|%>
  <%= f.label :title, t('activerecord.attributes.mission.title')%>
  <%= f.text_field :title, autofocus: true %>
  <%= f.label :description, t('activerecord.attributes.mission.description')%>
  <%= f.text_field :description %>
  <%= f.label :due_date, t('activerecord.attributes.mission.due_date') %>
  <%= f.datetime_local_field :due_date %>
  <%= f.label :priority, t('activerecord.attributes.mission.priority') %>
  <%= f.select :priority, options_for_select(translate(Mission.priorities.keys, Mission), 0) %>

  <%= f.submit t('submit'), name: nil %>
<% end %>
