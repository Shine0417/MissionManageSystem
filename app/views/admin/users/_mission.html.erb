<tr id="tr_<%= mission.id %>">
  <td class="text-start overflow-hidden"><%= mission.title %></td>
  <td class="text-nowrap"><%= mission_due_date(mission.due_date) %></td>
  <td><%= t("activerecord.attributes.mission.statuses.#{ mission.status}") %></td>
  <td><%= t("activerecord.attributes.mission.priorities.#{mission.priority}") %></td>
  <td>
    <% mission.tags.map do |tag|%>
      <span class="badge rounded-pill bg-success"><%= tag.name %></span>
    <%end%>
  </td>
</tr>
